    <!-- 通用查询结果列 -->
<!--    <sql id="Base_Column_List">
        id, bsid, hardware, bootloader, firmware, updatestate
    </sql>-->
    <select id="findByBsid" resultType="com.tgy.rtls.data.entity.update.BsfirmwareEntity">
        select * from bsfirmware where 1=1
        <if test="bsid!=null and bsid!=''">
           and bsid=#{bsid}
        </if>
        order by bsid asc
    </select>

    <insert id="insertBsfirmwareEntity">
        insert into bsfirmware(bsid,armupdatestate,uwbupdatestate,product,pid,fru,sn,`release`,core,qt,ucb1,ucb2)
        value (#{bsfirmwareEntity.bsid},#{bsfirmwareEntity.armupdatestate},#{bsfirmwareEntity.uwbupdatestate},
               #{bsfirmwareEntity.product},#{bsfirmwareEntity.pid},
                #{bsfirmwareEntity.fru},#{bsfirmwareEntity.sn},
                 #{bsfirmwareEntity.release},#{bsfirmwareEntity.core},
                 #{bsfirmwareEntity.qt},#{bsfirmwareEntity.ucb1},
                 #{bsfirmwareEntity.ucb2}
               )
    </insert>
    <update id="update">
        update bsfirmware
         set   armupdatestate=#{bsfirmwareEntity.armupdatestate},uwbupdatestate=#{bsfirmwareEntity.uwbupdatestate},product=#{bsfirmwareEntity.product}, pid=#{bsfirmwareEntity.pid}, fru=#{bsfirmwareEntity.fru},
          sn=#{bsfirmwareEntity.sn}, `release`=#{bsfirmwareEntity.release}, core=#{bsfirmwareEntity.core},
           qt=#{bsfirmwareEntity.qt}, ucb1=#{bsfirmwareEntity.ucb1}, ucb2=#{bsfirmwareEntity.ucb2}
        where bsid=#{bsfirmwareEntity.bsid}
    </update>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.equip.SubScanMapper">
    <select id="findByAll" resultType="com.tgy.rtls.data.entity.equip.SubScan">
        select *,
        (SELECT ${name} FROM status WHERE TYPE='power' AND typeid=s.powerstate)AS powerName
        from sub_scan s
        where 1=1
        <if test="status!=null">
            and status=#{status}
        </if>
        <if test="code1!=null and code1!=''">
            and code1=#{code1}
        </if>
        <if test="code2!=null and code2!=''">
            and code2=#{code2}
        </if>
    </select>

    <select id="findByNum" resultType="com.tgy.rtls.data.entity.equip.SubScan">
        select *
        from sub_scan
        where num=#{num}
    </select>

    <insert id="addSubScan">
        insert into sub_scan(num,ipAddress,powerstate,batteryVolt,status)
        values (#{subScan.num},#{subScan.ipAddress},#{subScan.powerstate},#{subScan.batteryVolt},
        #{subScan.status})
    </insert>

    <update id="updateStatus">
        update sub_scan
        set status=#{status}
        where num=#{num}
    </update>

    <update id="delSubScan">
        truncate table sub_scan
    </update>

</mapper>
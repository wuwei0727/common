<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.type.WorktypeMapper">
    <select id="findByAll" resultType="com.tgy.rtls.data.entity.type.Worktype">
        select *
        from  worktype
        where instanceid=#{instanceid}
    </select>

    <select id="findById" resultType="com.tgy.rtls.data.entity.type.Worktype">
        select *
        from  worktype
        where id=#{id}
    </select>

    <select id="findByName" resultType="com.tgy.rtls.data.entity.type.Worktype">
        select *
        from  worktype
        where name=#{name} and instanceid=#{instanceid}
    </select>

    <insert id="addWorktype" keyProperty="id" useGeneratedKeys="true">
        insert  into worktype(name,instanceid)
        value (#{worktype.name},#{worktype.instanceid})
    </insert>

    <update id="updateWorktype">
        update worktype
        <set>
            <if test="worktype.name!=null and worktype.name!=''">
                name=#{worktype.name},
            </if>
        </set>
        where id=#{worktype.id}
    </update>

    <delete id="delWorktype">
        delete from worktype
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <delete id="delWorktypeInstance">
        delete from worktype
        where instanceid=#{instanceid}
    </delete>
</mapper>
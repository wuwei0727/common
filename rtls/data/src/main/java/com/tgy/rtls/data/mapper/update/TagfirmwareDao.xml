<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.update.TagfirmwareDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tgy.rtls.data.entity.update.TagfirmwareEntity">
        <id column="id" property="id" />
        <result column="tagid" property="tagid" />
        <result column="hardware" property="hardware" />
        <result column="bootloader" property="bootloader" />
        <result column="firmware" property="firmware" />
        <result column="updatestate" property="updatestate" />
        <result column="utc" property="utc" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, tagid, hardware, bootloader, firmware, updatestate,utc
    </sql>
    <select id="findByTagid" resultType="com.tgy.rtls.data.entity.update.TagfirmwareEntity">
        select * from tagfirmware where 1=1
        <if test="tagid!=null and tagid!=''">
        and  tagid=#{tagid}
        </if>
        order by tagid asc
    </select>
    <select id="getAll" resultType="com.tgy.rtls.data.entity.update.TagfirmwareEntity">
        select * from tagfirmware where 1=1
        order by tagid asc
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.map.AreaDotMapper">
    <select id="findByArea" resultType="com.tgy.rtls.data.entity.map.AreaDot">
        select *
        from area_dot
        where area=#{area}
    </select>

    <insert id="addAreaDot">
        insert into area_dot(x,y,z,area)
        value (#{dot.x},#{dot.y},#{dot.z},#{dot.area})
    </insert>

    <delete id="delAreaDot">
        delete from area_dot
        where area=#{area}
    </delete>
</mapper>
    <foreach collection="list" item="item" separator=",">
      (#{item.mapId,jdbcType=BIGINT}, #{item.appId,jdbcType=BIGINT}, #{item.shortLink,jdbcType=VARCHAR}
        )
    </foreach>
  </insert>

  <select id="getMapconfig" resultMap="BaseResultMap">
    select
        <include refid="Base_Column_List"/>
    from jump_map_param j
            left join map_2d m on j.map_id = m.id
    <where>
        <if test="mapId != null">
          m.id = #{mapId}
        </if>
        <if test="maps != null and maps != ''">
          and m.id in
                  <foreach collection="maps" item="mapIds" open="(" close=")" separator=",">
                        #{mapIds}
                  </foreach>
        </if>
        <if test="keyword!= null and keyword != ''">
          <bind name="mapConfigName" value="'%' + keyword + '%'"/>
          and j.name like #{mapConfigName}
        </if>
    </where>
      <if test="desc != null and desc != ''">
          order by ${desc}
      </if>
  </select>

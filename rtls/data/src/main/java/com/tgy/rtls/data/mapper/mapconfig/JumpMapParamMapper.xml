  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    j.id, j.map_id, j.app_id, j.short_link,j.createdTime,m.id,m.name as mapName
  </sql>
  <update id="updateBatch" parameterType="java.util.List">
    <!--@mbg.generated-->
    update park.jump_map_param
    <trim prefix="set" suffixOverrides=",">
      <trim prefix="map_id = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.mapId,jdbcType=BIGINT}
        </foreach>
      </trim>
      <trim prefix="app_id = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.appId,jdbcType=BIGINT}
        </foreach>
      </trim>
      <trim prefix="short_link = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.shortLink,jdbcType=VARCHAR}
        </foreach>
      </trim>
    </trim>

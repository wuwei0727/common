<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.type.LevelMapper">
    <select id="findByAll" resultType="com.tgy.rtls.data.entity.type.Level">
        select *
        from  level
        where instanceid=#{instanceid}
    </select>

    <select id="findById" resultType="com.tgy.rtls.data.entity.type.Level">
        select *
        from  level
        where id=#{id}
    </select>

    <select id="findByName" resultType="com.tgy.rtls.data.entity.type.Level">
        select *
        from  level
        where instanceid=#{instanceid} and name=#{name}
    </select>

    <insert id="addLevel" keyProperty="id" useGeneratedKeys="true">
        insert  into level(name,instanceid)
        value (#{level.name},#{level.instanceid})
    </insert>

    <update id="updateLevel">
        update level
        <set>
            <if test="level.name!=null and level.name!=''">
                name=#{level.name},
            </if>
        </set>
        where id=#{level.id}
    </update>

    <delete id="delLevel">
        delete from level
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>

    <delete id="delLevelInstance">
        delete from level
        where instanceid=#{instanceid}
    </delete>
</mapper>
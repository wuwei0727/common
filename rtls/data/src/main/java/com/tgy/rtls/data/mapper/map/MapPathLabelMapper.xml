<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.map.MapPathLabelMapper">
  <resultMap id="BaseResultMap" type="com.tgy.rtls.data.entity.map.MapPathLabel">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="interiorName" jdbcType="VARCHAR" property="interiorName" />
    <result column="map" jdbcType="BIGINT" property="map" />
    <result column="x" jdbcType="VARCHAR" property="x" />
    <result column="y" jdbcType="VARCHAR" property="y" />
    <result column="floor" jdbcType="VARCHAR" property="floor" />
    <result column="floorName" jdbcType="VARCHAR" property="floorName" />
    <result column="addTime" jdbcType="TIMESTAMP" property="addTime" />
    <result column="updateTime" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@sql select -->mpl.id,mpl.`name`,mpl.interiorName,mpl.x,mpl.map,mpl.y, mpl.`floor`,mrf.name floorName,mpl.addTime,mpl.updateTime,
    m.name as mapName,m.mapkey,m.appName,m.fmapID <!--@sql from  map_2d m , mappathlabel mpl left join map_relevance_floor mrf on mrf.map = m.id-->
  </sql>
  <update id="updateBatch" parameterType="java.util.List">
    update mapPathLabel
    <trim prefix="set" suffixOverrides=",">
      <trim prefix="`name` = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.name,jdbcType=VARCHAR}
        </foreach>
      </trim>
      <trim prefix="x = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.x,jdbcType=VARCHAR}
        </foreach>
      </trim>
      <trim prefix="y = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.y,jdbcType=VARCHAR}
        </foreach>
      </trim>
      <trim prefix="`floor` = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.floor,jdbcType=VARCHAR}
        </foreach>
      </trim>
    </trim>
    where id in
    <foreach close=")" collection="list" item="item" open="(" separator=", ">
      #{item.id,jdbcType=BIGINT}
    </foreach>
  </update>
  <insert id="batchInsert" keyColumn="id" keyProperty="id" parameterType="map" useGeneratedKeys="true">
    insert into mapPathLabel
    (`name`,interiorName,map,x, y, `floor`,addTime,updateTime)
    values
    <foreach collection="list" item="item" separator=",">
      (#{item.name,jdbcType=VARCHAR}, #{item.interiorName,jdbcType=VARCHAR}, #{item.map,jdbcType=INTEGER},
      #{item.x,jdbcType=VARCHAR}, #{item.y,jdbcType=VARCHAR},#{item.floor,jdbcType=VARCHAR},
      #{item.addTime,jdbcType=DATE},#{item.updateTime,jdbcType=DATE})
    </foreach>
  </insert>

  <select id="getMapPathLabels" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List"/>
        from mapPathLabel mpl
                left join map_2d m ON mpl.map = m.id
    left join map_relevance_floor mrf on mrf.map = m.id AND mrf.level = mpl.floor
    <where>
      <if test="mapIds != null and mapIds != ''">
        and m.id in
          <foreach collection="mapIds" open="(" close=")" separator="," item="mapIds">
            #{mapIds}
          </foreach>
      </if>
      <if test="floorName != null and floorName != ''">
        and mrf.name like concat('%',#{floorName},'%')
      </if>
      <if test="name != null and name != ''">
        <bind name="name" value="'%' + name + '%'"/>
        and mpl.name like concat('%',#{name},'%')
      </if>
      <if test="map != null">
        and m.id = #{map}
      </if>
    </where>
    <!--<if test="desc != null and desc != ''">-->
      order by mpl.addTime desc
    <!--</if>-->
  </select>
  
  <insert id="addMapPathLabel">
    insert into mapPathLabel(name,interiorName, map, x, y, floor, addTime, updateTime)
    values(#{name},#{interiorName},#{map},#{x},
           #{y},#{floor},#{addTime},#{updateTime})
  </insert>

  <delete id="delMapPathLabel">
    delete
    from mapPathLabel
    where id = #{ids};
  </delete>

  <select id="getMapPathLabelById" resultMap="BaseResultMap">
    select
        <include refid="Base_Column_List"/>
    from mapPathLabel mpl
        left join map_2d m ON mpl.map = m.id
    left join map_relevance_floor mrf on mrf.map = m.id AND mrf.level = mpl.floor
    where mpl.id = #{id}
  </select>

  <update id="editById">
    update mapPathLabel
    <set>
      <if test="name != null and name != ''">
        name =#{name},
      </if>
      <if test="interiorName != null and interiorName != ''">
        interiorName = #{interiorName},
      </if>
      <if test="map != null">
        map = #{map},
      </if>
      <if test="x != null and x != ''">
        x = #{x},
      </if>
      <if test="y != null and y != ''">
        y = #{y},
      </if>
      <if test="floor != null and floor != ''">
        floor = #{floor},
      </if>
      <if test="updateTime != null">
        updateTime = #{updateTime}
      </if>
    </set>
    where id = #{id}
  </update>
</mapper>
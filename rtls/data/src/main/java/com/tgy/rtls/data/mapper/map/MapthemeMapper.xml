<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tgy.rtls.data.mapper.map.MapthemeMapper">
  <resultMap id="BaseResultMap" type="com.tgy.rtls.data.entity.map.Maptheme">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="themeName" jdbcType="VARCHAR" property="themeName" />
    <result column="mapId" jdbcType="VARCHAR" property="mapId" />
  </resultMap>
  <sql id="Base_Column_List">
    id, themeName, mapId
  </sql>
  <update id="updateBatch" parameterType="java.util.List">
    update maptheme
    <trim prefix="set" suffixOverrides=",">
      <trim prefix="themeName = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.themeName,jdbcType=VARCHAR}
        </foreach>
      </trim>
      <trim prefix="mapId = case" suffix="end,">
        <foreach collection="list" index="index" item="item">
          when id = #{item.id,jdbcType=BIGINT} then #{item.mapId,jdbcType=VARCHAR}
        </foreach>
      </trim>
    </trim>
    where id in
    <foreach close=")" collection="list" item="item" open="(" separator=", ">
      #{item.id,jdbcType=BIGINT}
    </foreach>
  </update>
  <insert id="batchInsert" keyColumn="id" keyProperty="id" parameterType="map" useGeneratedKeys="true">
    insert into maptheme
    (themeName, mapId)
    values
    <foreach collection="list" item="item" separator=",">
      (#{item.themeName,jdbcType=VARCHAR}, #{item.mapId,jdbcType=VARCHAR})
    </foreach>
  </insert>

  <insert id="addMaptheme">
    INSERT INTO maptheme(themename, mapid)
    VALUES(#{themeName},#{mapId})
  </insert>

  <update id="editMaptheme">
    update maptheme
    set themeName = #{themeName}
    where mapId = #{mapId}
  </update>


</mapper>
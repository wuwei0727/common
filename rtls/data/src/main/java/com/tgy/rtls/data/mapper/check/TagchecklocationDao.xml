<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.check.TagchecklocationDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tgy.rtls.data.entity.check.TagchecklocationEntity">
        <id column="id" property="id" />
        <result column="checkbsid" property="checkbsid" />
        <result column="tagid" property="tagid" />
        <result column="bsid" property="bsid" />
        <result column="time" property="time" />
        <result column="x" property="x" />
        <result column="y" property="y" />
        <result column="z" property="z" />
    </resultMap>

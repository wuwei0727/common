    </cache>-->
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, checkbsid, tagid, bsid, time, x, y, z
    </sql>
    <select id="getByTagcheckbsid_Recent" resultType="com.tgy.rtls.data.entity.check.TagchecklocationEntity">

  SELECT A.* FROM tagchecklocation A,
(SELECT tagid,checkbsid, MAX(id) id FROM tagchecklocation WHERE checkbsid=#{checkbsid} GROUP BY tagid) B
WHERE A.tagid = B.tagid AND A.id = B.id AND B.checkbsid=A.checkbsid order by tagid asc
    </select>

    <select id="getByTagcheckbsid_All" resultType="com.tgy.rtls.data.entity.check.TagchecklocationEntity">
                SELECT A.* FROM tagchecklocation A where 1=1
        and A.checkbsid=#{checkbsid} ORDER BY tagid ASC ,id ASC
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tgy.rtls.data.mapper.message.WarnRuleMapper">
    <select id="findByAll" resultType="com.tgy.rtls.data.entity.message.WarnRule">
        select * ,
        (select ${name} from status where typeid=w.type and type='rule')as typeName,
        (select name from map_2d where id=w.map)as mapName
        from warnrule w
        where map in (select id from map_2d where instanceid=#{instanceid})
        <if test="map!=null and map!=''">
            and  map=#{map}
        </if>
        <if test="enable!=null">
            and enable=#{enable}
        </if>
        <if test="type!=null">
            and type=#{type}
        </if>
    </select>

    <select id="findByMap" resultType="com.tgy.rtls.data.entity.message.WarnMap">
        SELECT DISTINCT((SELECT NAME FROM map_2d WHERE id=map))AS mapName,
        map AS id
        FROM warnrule
        where 1=1
        <if test="map!=null and map!=''">
          and  map=#{map}
        </if>
    </select>


    <select id="findByType" resultType="com.tgy.rtls.data.entity.message.WarnRule">
        select *
        from warnrule
        where type=#{type}
        <if test="map!=null and map!=''">
        and  map=#{map}
       </if>
        <if test="enable!=null and enable!=''">
            and  enable=#{enable}
        </if>
    </select>

    <update id="updateWarnRule">
        update warnrule
        <set>
            <if test="rule.rule!=null and rule.rule!=''">
                rule=#{rule.rule},
            </if>
            <if test="rule.enable!=null">
                enable=#{rule.enable},
            </if>
        </set>
        where id=#{rule.id}
    </update>

    <select id="findByWarnRuleId" resultType="com.tgy.rtls.data.entity.message.WarnRule">
        select *
        from warnrule
        where id=#{id}
    </select>

    <insert id="addWarnRule">
        insert into warnrule(type,rule,enable,map)
        values  (1,'1000',1,#{map}),
                (2,'24',1,#{map}),
                (3,'1',1,#{map}),
                (4,'15',1,#{map}),
                (5,'20,15',1,#{map})
    </insert>

    <delete id="delWarnRecord">
        delete from warnrecord
        where map in
        <foreach collection="maps" item="map" open="(" close=")" separator=",">
            #{map}
        </foreach>
    </delete>

    <delete id="delWarnRule">
        delete from warnrule
        where map in
        <foreach collection="maps" item="map" open="(" close=")" separator=",">
            #{map}
        </foreach>
    </delete>
</mapper>